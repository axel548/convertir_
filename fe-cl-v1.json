            "complemento": {
              "type": "string",
              "description": "Dirección: complemento (Receptor)",
              "maxLength": 200,
              "minLength": 5
            }
          }
        },
        "telefono": {
          "type": [
            "string",
            "null"
          ],
          "description": "Teléfono (Receptor)",
          "minLength": 8,
          "maxLength": 30
        },
        "correo": {
          "type": "string",
          "description": "Correo electrónico (Receptor)",
          "format": "email",
          "maxLength": 100
        }
      }
    },
    "cuerpoDocumento": {
      "items": {
        "type": "object",
        "properties": {
          "numItem": {
            "type": "integer",
            "description": "N° de ítem",
            "minimum": 1,
            "maximum": 500
          },
          "tipoDte": {
            "type": "string",
            "description": "Tipo de ítem",
            "enum": [
              "01",
              "03",
              "05",
              "06",
              "11"
            ]
          },
          "tipoGeneracion": {
            "type": "integer",
            "description": "Tipo de generación del documento",
            "enum": [
              1,
              2
            ]
          },
          "numeroDocumento": {
            "description": "Número de documento relacionado",
            "type": "string",
            "minLength": 1,
            "maxLength": 36
          },
          "fechaGeneracion": {
            "type": "string",
            "description": "Fecha de generación del  relacionado",
            "format": "date"
          },
          "ventaNoSuj": {
            "type": "number",
            "description": "Ventas no Sujetas",
            "exclusiveMaximum": 100000000000,
            "exclusiveMinimum": -100000000000,
            "multipleOf": 0.00000001
          },
          "ventaExenta": {
            "type": "number",
            "description": "Ventas Exentas",
            "exclusiveMaximum": 100000000000,
            "exclusiveMinimum": -100000000000,
            "multipleOf": 0.00000001
          },
          "ventaGravada": {
            "type": "number",
            "description": "Ventas Gravadas",
            "exclusiveMaximum": 100000000000,
            "exclusiveMinimum": -100000000000,
            "multipleOf": 0.00000001
          },
          "exportaciones": {
            "type": "number",
            "description": "Ventas Gravadas",
            "exclusiveMaximum": 100000000000,
            "exclusiveMinimum": -100000000000,
            "multipleOf": 0.00000001
          },
          "tributos": {
            "description": "Tributo sujeto a cálculo de IVA",
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "string",
              "maxLength": 2,
              "minLength": 2,
              "enum": [
                null,
                "20",
                "C3",
                "59",
                "71",
                "D1",
                "C8",
                "D5",
                "D4"
              ]
            },
            "uniqueItems": true
          },
          "ivaItem": {
            "type": "number",
            "description": "IVA por ítem",
            "exclusiveMaximum": 100000000000,
            "exclusiveMinimum": -100000000000,
            "multipleOf": 0.00000001
          },
          "obsItem": {
            "type": "string",
            "description": "Observaciones por ítem",
            "maxLength": 3000,
            "minLength": 3
          }
        }
      },
      "minItems": 1,
      "maxItems": 500
    },
    "resumen": {
      "properties": {
        "totalNoSuj": {
          "type": "number",
          "description": "Total de Operaciones no sujetas",
          "exclusiveMaximum": 100000000000,
          "exclusiveMinimum": -100000000000,
          "multipleOf": 0.01
        },
        "totalExenta": {
          "type": "number",
          "description": "Total de Operaciones exentas",
          "exclusiveMaximum": 100000000000,
          "exclusiveMinimum": -100000000000,
          "multipleOf": 0.01
        },
        "totalGravada": {
          "type": "number",
          "description": "Total de Operaciones Gravadas",
          "exclusiveMaximum": 100000000000,
          "exclusiveMinimum": -100000000000,
          "multipleOf": 0.01
        },
        "totalExportacion": {
          "type": "number",
          "description": "Total de Operaciones Exportación",
          "exclusiveMaximum": 100000000000,
          "exclusiveMinimum": -100000000000,
          "multipleOf": 0.01
        },
        "subTotalVentas": {
          "type": "number",
          "description": "Suma de operaciones sin impuestos",
          "exclusiveMaximum": 100000000000,
          "exclusiveMinimum": -100000000000,
          "multipleOf": 0.01
        },
        "tributos": {
          "type": [
            "array",
            "null"
          ],
          "uniqueItems": true,
          "description": "Resumen de Tributos",
          "items": {
            "type": "object",
            "properties": {
              "codigo": {
                "description": "Resumen Código de Tributo",
                "type": "string",
                "enum": [
                  null,
                  "20",
                  "C3",
                  "59",
                  "71",
                  "D1",
                  "C8",
                  "D5",
                  "D4"
                ],
                "minLength": 2,
                "maxLength": 2
              },
              "descripcion": {
                "description": "Nombre del Tributo",
                "type": "string",
                "minLength": 2,
                "maxLength": 300
              },
              "valor": {
                "description": "Valor del Tributo",
                "type": "number",
                "exclusiveMaximum": 100000000000,
                "exclusiveMinimum": -100000000000,
                "multipleOf": 0.01
              }
            }
          }
        },
        "montoTotalOperacion": {
          "type": "number",
          "description": "Monto Total de la Operación",
          "exclusiveMaximum": 100000000000,
          "exclusiveMinimum": -100000000000,
          "multipleOf": 0.01
        },
        "ivaPerci": {
          "type": "number",
          "description": "IVA Percibido liquidado",
          "exclusiveMaximum": 100000000000,
          "exclusiveMinimum": -100000000000,
          "multipleOf": 0.01
        },
        "total": {
          "type": "number",
          "description": "Total a Pagar",
          "exclusiveMaximum": 100000000000,
          "exclusiveMinimum": -100000000000,
          "multipleOf": 0.01
        },
        "totalLetras": {
          "type": "string",
          "description": "Total en Letras",
          "maxLength": 200
        },
        "condicionOperacion": {
          "type": "number",
          "description": "Condición de la Operación",
          "enum": [
            1,
            2,
            3
          ]
        }
      }
    },
