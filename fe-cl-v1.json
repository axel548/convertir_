{
    "identificacion": {
      "properties": {
        "version": {
          "type": "integer",
          "description": "Versión",
          "const": 1
        },
        "ambiente": {
          "type": "string",
          "description": "Ambiente de destino",
          "enum": [
            "00",
            "01"
          ]
        },
        "tipoDte": {
          "type": "string",
          "description": "Tipo de Documento",
          "const": "08"
        },
        "numeroControl": {
          "type": "string",
          "description": "Número de Control",
          "maxLength": 31,
          "minLength": 31,
          "pattern": "^DTE-08-[A-Z0-9]{8}-[0-9]{15}$"
        },
        "codigoGeneracion": {
          "type": "string",
          "description": "Código de Generación",
          "maxLength": 36,
          "minLength": 36,
          "pattern": "^[A-F0-9]{8}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{12}$"
        },
        "tipoModelo": {
          "type": "number",
          "description": "Modelo de Facturación",
          "const": 1
        },
        "tipoOperacion": {
          "type": "integer",
          "description": "Tipo de Transmisión",
          "const": 1
        },
        "fecEmi": {
          "type": "string",
          "description": "Fecha de Generación",
          "format": "date"
        },
        "horEmi": {
          "type": "string",
          "description": "Hora de Generación",
          "pattern": "^(0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]?$"
        },
        "tipoMoneda": {
          "type": "string",
          "description": "Tipo de Moneda",
          "enum": [
            "USD"
          ]
        }
      }
    },
    "emisor": {
      "properties": {
        "nit": {
          "description": "NIT (Emisor)",
          "type": "string",
          "pattern": "^([0-9]{14}|[0-9]{9})$",
          "maxLength": 14
        },
        "nrc": {
          "description": "NRC (Emisor)",
          "type": "string",
          "pattern": "^[0-9]{1,8}$",
          "minLength": 2,
          "maxLength": 8
        },
        "nombre": {
          "type": "string",
          "description": "Nombre, denominación o razón social del contribuyente (Emisor)",
          "maxLength": 250,
          "minLength": 1
        },
        "codActividad": {
          "type": "string",
          "description": "Código de Actividad Económica (Emisor)",
          "pattern": "^[0-9]{2,6}$",
          "maxLength": 6,
          "minLength": 5
        },
        "descActividad": {
          "type": "string",
          "description": "Actividad Económica (Emisor)",
          "maxLength": 150,
          "minLength": 5
        },
        "nombreComercial": {
          "description": "Nombre Comercial (Emisor)",
          "type": [
            "string",
            "null"
          ],
          "maxLength": 150
        },
        "tipoEstablecimiento": {
          "type": "string",
          "description": "Tipo de establecimiento (Emisor)",
          "enum": [
            "01",
            "02",
            "04",
            "07",
            "20"
          ]
        },
        "direccion": {
          "type": "object",
          "description": "Dirección (Emisor)",
          "properties": {
            "departamento": {
              "type": "string",
              "description": "Dirección Departamento (Emisor)",
              "pattern": "^0[1-9]|1[0-4]$"
            },
            "municipio": {
              "type": "string",
              "description": "Dirección Municipio (Emisor)",
              "pattern": "^[0-9]{2}$"
            },
            "complemento": {
              "type": "string",
              "description": "Dirección complemento (Emisor)",
              "maxLength": 200,
              "minLength": 1
            }
          }
        },
        "telefono": {
          "type": "string",
          "description": "Teléfono (Emisor)",
          "minLength": 8,
          "maxLength": 30
        },
        "correo": {
          "type": "string",
          "description": "Correo electrónico (Emisor)",
          "format": "email",
          "maxLength": 100,
          "minLength": 3
        },
        "codEstableMH": {
          "description": "Código del establecimiento asignado por el MH",
          "type": [
            "string",
            "null"
          ],
          "maxLength": 4,
          "minLength": 4
        },
        "codEstable": {
          "description": "Código del establecimiento asignado por el contribuyente",
          "type": [
            "string",
            "null"
          ],
          "minLength": 4,
          "maxLength": 4
        },
        "codPuntoVentaMH": {
          "description": "Código del Punto de Venta (Emisor) Asignado por el MH",
          "type": [
            "string",
            "null"
          ],
          "maxLength": 4,
          "minLength": 4
        },
        "codPuntoVenta": {
          "description": "Código del Punto de Venta (Emisor) asignado por el contribuyente",
          "type": [
            "string",
            "null"
          ],
          "maxLength": 15,
          "minLength": 1
        }
      }
    },
    "receptor": {
      "properties": {
        "nit": {
          "type": "string",
          "description": "NIT (Receptor)",
          "pattern": "^([0-9]{14}|[0-9]{9})$"
