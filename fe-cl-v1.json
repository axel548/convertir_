        },
        "descActividad": {
          "type": "string",
          "description": "Actividad Económica (Receptor)",
          "maxLength": 150,
          "minLength": 5
        },
        "nombreComercial": {
          "description": "Nombre Comercial (Receptor)",
          "type": [
            "string",
            "null"
          ],
          "maxLength": 150,
          "minLength": 5
        },
        "direccion": {
          "type": "object",
          "description": "Dirección (Receptor)",
          "properties": {
            "departamento": {
              "type": "string",
              "description": "Dirección: Departamento (Receptor)",
              "pattern": "^0[1-9]|1[0-4]$"
            },
            "municipio": {
              "type": "string",
              "description": "Dirección: Municipio (Receptor)",
